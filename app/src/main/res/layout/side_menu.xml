<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="220dp"
              android:layout_height="match_parent"

              android:background="@color/empty"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"

            android:background="@drawable/guest_user_icon"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="User Id : BU0004"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">


                <TextView
                    android:id="@+id/shop_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_home_black_24dp"
                    android:drawablePadding="5dp"
                    android:padding="8dp"
                    android:text="Home"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </LinearLayout>


            <TextView
                android:id="@+id/myDayPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_menu_plan"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="My Daily Program"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/get_shops_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_menu_endtrip"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="Start Trip"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/order_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_order_book"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="Book Order"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/invoice_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_menu_invoice"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="Billing"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/my_loc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_menu_location"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="MyLocation"
                android:textSize="15sp"
                android:textStyle="bold"/>




            <TextView
                android:id="@+id/add_new_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_menu_new_user"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="Add New Customer"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/shop_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_menu_monthly_report"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="Update Customer"

                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/remainder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_notifications_black_24dp"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="Remainder"

                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_local_movies_black_24dp"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="Remarks"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="15dp"
                android:background="#FFFFFF"/>

            <TextView
                android:id="@+id/day_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_menu_report"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="Day Activity Report"
                android:visibility="gone"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/month_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_menu_monthly_report"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="Month Summary"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/end_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_menu_starttrip"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="End Trip"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/logout"
                android:drawablePadding="5dp"
                android:padding="8dp"
                android:text="Logout"
                android:textSize="15sp"
                android:textStyle="bold"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>