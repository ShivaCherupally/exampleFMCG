<!-- This DrawerLayout has two children at the root  -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomHRLID"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_bg_black"
                android:orientation="horizontal"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/shopName_spinner"
                    style="@style/spinner_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Zone Name"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_bg_black"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/zone_name_spinner"
                    style="@style/spinner_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Zone Name"
                    android:singleLine="true"/>
            </LinearLayout>

            <!--  <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="45dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginTop="10dp"
                  android:background="@drawable/rect_bg_black"
                  android:orientation="horizontal"
                  android:visibility="gone">

                  <Spinner
                      android:id="@+id/routeName_spinner"
                      style="@style/spinner_bg_style"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:layout_gravity="center"
                      android:hint="@string/routecd"
                      android:singleLine="true"/>
              </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_bg_black"
                android:orientation="horizontal"
                android:visibility="visible">

                <Spinner
                    android:id="@+id/routecd"
                    style="@style/spinner_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="@string/routecd"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_bg_black"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/area_name"
                    style="@style/spinner_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="@string/routecd"
                    android:singleLine="true"/>
            </LinearLayout>


            <EditText
                android:id="@+id/shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:hint="@string/shop_name"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:textCursorDrawable="@drawable/color_cursor"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_bg_black"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/shop_type_dp"
                    style="@style/spinner_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="ShopType"
                    android:singleLine="true"/>
            </LinearLayout>

            <!--<EditText
                android:id="@+id/ownername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:hint="@string/owner"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor"/>-->

            <EditText
                android:id="@+id/location_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:hint="Land mark"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor"/>


            <EditText
                android:id="@+id/shop_address"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:cursorVisible="true"
                android:gravity="start"
                android:hint="Shop Address"
                android:inputType="text|textCapSentences"
                android:padding="8sp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:hint="@string/pin"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_bg_black"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/religion"
                    style="@style/spinner_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="@string/religion"
                    android:inputType="text"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_bg_black"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/payment_sp"
                    style="@style/spinner_bg_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_gravity="center"
                    android:inputType="text"
                    android:singleLine="true"
                    android:visibility="visible"/>
            </LinearLayout>

            <EditText
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:hint="@string/paymentmode"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/emailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:hint="@string/emailid"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor"/>

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:hint="@string/mobile"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:hint="@string/ph"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor"/>

            <EditText
                android:id="@+id/ownername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:hint="@string/owner"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor"/>
            <EditText
                android:id="@+id/descriptionShop"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:cursorVisible="true"
                android:gravity="start"
                android:hint="Description"
                android:inputType="text|textCapSentences"
                android:padding="8sp"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:hint="@string/lat"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/lang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:hint="@string/lan"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/createdby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_white"
                android:hint="@string/createdby"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:visibility="gone"/>

            <!--<LinearLayout
                android:id="@+id/bottomHRLID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/scv"


                android:background="@color/white">

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"

                    android:background="@drawable/submit_rectangle"
                    android:gravity="center"


                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />
            </LinearLayout>-->


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomHRLID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"

        android:background="@color/empty">

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:background="@drawable/submit_rectangle"
            android:gravity="center"


            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
    </LinearLayout>

</RelativeLayout>






