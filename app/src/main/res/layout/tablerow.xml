<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:shrinkColumns="*"
    android:stretchColumns="*">

    <!-- Row 1 with 5 columns -->

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:background="@drawable/table_view_border_3"
            android:gravity="center"
            android:padding="10dip"
            android:singleLine="true"
            android:text="Product Name"
            android:textColor="#ffffff" />

        <TextView
            android:layout_weight="1"
            android:background="@drawable/table_view_border_3"
            android:gravity="center"
            android:padding="10dip"
            android:singleLine="true"
            android:text="Price"
            android:textColor="#ffffff" />

        <TextView
            android:layout_weight="1"
            android:background="@drawable/table_view_border_3"
            android:gravity="center"
            android:padding="10dip"
            android:singleLine="true"
            android:text="Qty"
            android:textColor="#ffffff" />

        <TextView
            android:layout_weight="1"
            android:background="@drawable/table_view_border_3"
            android:gravity="center"
            android:padding="10dip"
            android:singleLine="true"
            android:text="Fees"
            android:textColor="#ffffff" />

        <TextView
            android:layout_weight="1"
            android:background="@drawable/table_view_border_3"
            android:gravity="center"
            android:padding="10dip"
            android:singleLine="true"
            android:text="WAT"
            android:textColor="#ffffff" />

        <TextView
            android:layout_weight="1"
            android:background="@drawable/table_view_border_3"
            android:gravity="center"
            android:padding="10dip"
            android:singleLine="true"
            android:text="GST"
            android:textColor="#ffffff" />

    </TableRow>



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/table_view_border"
            android:id="@+id/TextView0"
            android:text=""></TextView>

        <TextView
            android:paddingLeft="5dp"
            android:background="@drawable/table_view_border"
            android:text="Feb 7"
            android:textStyle="bold"
            android:typeface="serif"></TextView>

        <TextView
            android:paddingLeft="5dp"
            android:background="@drawable/table_view_border"
            android:id="@+id/TextView03"
            android:text="Feb 8"
            android:textStyle="bold"
            android:typeface="serif"></TextView>

        <TextView
            android:paddingLeft="5dp"
            android:background="@drawable/table_view_border"
            android:id="@+id/TextView02"
            android:text="Feb 9"
            android:textStyle="bold"
            android:typeface="serif"></TextView>

        <TextView
            android:paddingLeft="5dp"
            android:background="@drawable/table_view_border"
            android:id="@+id/TextView01"
            android:text="Feb 10"
            android:textStyle="bold"
            android:typeface="serif"></TextView>

        <TextView
            android:paddingLeft="5dp"
            android:background="@drawable/table_view_border"
            android:id="@+id/textView1"
            android:text="Feb 11"
            android:textStyle="bold"
            android:typeface="serif"></TextView>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="5dp"
            android:background="@drawable/table_view_border_2"
            android:text="Day High"
            android:textStyle="bold"></TextView>

        <TextView
            android:background="@drawable/table_view_border_2"
            android:gravity="center_horizontal"
            android:text="28°F"></TextView>

        <TextView
            android:background="@drawable/table_view_border_2"
            android:gravity="center_horizontal"
            android:text="26°F"></TextView>

        <TextView
            android:background="@drawable/table_view_border_2"
            android:gravity="center_horizontal"
            android:text="23°F"></TextView>

        <TextView
            android:background="@drawable/table_view_border_2"
            android:gravity="center_horizontal"
            android:text="17°F"></TextView>

        <TextView
            android:background="@drawable/table_view_border_2"
            android:gravity="center_horizontal"
            android:text="19°F"></TextView>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="5dp"
            android:background="@drawable/table_view_border"
            android:id="@+id/textView2"
            android:text="Day Low"
            android:textStyle="bold"></TextView>

        <TextView
            android:background="@drawable/table_view_border"
            android:id="@+id/textView3"
            android:gravity="center_horizontal"
            android:text="15°F"></TextView>

        <TextView
            android:background="@drawable/table_view_border"
            android:id="@+id/textView4"
            android:gravity="center_horizontal"
            android:text="14°F"></TextView>

        <TextView
            android:background="@drawable/table_view_border"
            android:id="@+id/textView5"
            android:gravity="center_horizontal"
            android:text="3°F"></TextView>

        <TextView
            android:background="@drawable/table_view_border"
            android:id="@+id/textView6"
            android:gravity="center_horizontal"
            android:text="5°F"></TextView>

        <TextView
            android:background="@drawable/table_view_border"
            android:id="@+id/textView7"
            android:gravity="center_horizontal"
            android:text="6°F"></TextView>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"></TableRow>


</TableLayout>